{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "src",
    "paths": {}
  },
  "include": ["src/**/*"], // Only compile source files

  "exclude": ["node_modules", "tmp", ".next", "dist"] // Add build dirs
}
